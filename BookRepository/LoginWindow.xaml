<Window x:Name="LoginWind" x:Class="BookRepository.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookRepository"
        mc:Ignorable="d"
        Title="Login" Height="208" Width="500" ResizeMode="CanMinimize">
    <Grid>
        <Label x:Name="lblUser" Content="Username" HorizontalAlignment="Left" Margin="133,36,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPass" Content="Password" HorizontalAlignment="Left" Height="27" Margin="137,67,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Height="26" Margin="202,68,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="-0.032,1.365" VerticalContentAlignment="Center"/>
        <Button x:Name="btnLogin" Content="Log in" HorizontalAlignment="Left" Height="24" Margin="94,121,0,0" VerticalAlignment="Top" Width="100" IsDefault="True"/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Height="24" Margin="202,121,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" BorderThickness="1"/>
        <Button x:Name="btnRecover" Content="Recover Pass" HorizontalAlignment="Left" Height="24" Margin="310,121,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="26" Margin="202,36,0,0" VerticalAlignment="Top" Width="124" IsInactiveSelectionHighlightEnabled="True" MaxLines="1" MaxLength="24" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
