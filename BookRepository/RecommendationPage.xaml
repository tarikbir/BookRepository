<Window x:Name="RecommendationWindow" x:Class="BookRepository.RecommendationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookRepository"
        mc:Ignorable="d"
        Title="Suggest Me!" Height="450" Width="800">
    <ScrollViewer x:Name="mainScrollBar" CanContentScroll="True" VerticalScrollBarVisibility="Visible">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF578BBF" Offset="0"/>
                    <GradientStop Color="#FFB2D9FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <WrapPanel x:Name="wrapRecommendedBooks" Margin="25,40,25,25"/>
            <Label x:Name="lbInfo" Content="Loading recommendations. This could take some time..." HorizontalAlignment="Left" Margin="2,2,0,0" VerticalAlignment="Top"/>
            <ProgressBar x:Name="pbBgw" HorizontalAlignment="Center" Height="20" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="700"/>
        </Grid>
    </ScrollViewer>
</Window>
