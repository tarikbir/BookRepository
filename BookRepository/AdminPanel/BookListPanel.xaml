<Window x:Class="BookRepository.AdminPanel.BookListPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookRepository.AdminPanel"
        mc:Ignorable="d"
        Title="BookListPanel" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ListBoxBook" HorizontalAlignment="Left" Height="418" Margin="0,2,0,0" VerticalAlignment="Top" Width="640"/>
        <Button x:Name="btnAddBook" Content="Add Book" HorizontalAlignment="Left" Height="26" Margin="656,36,0,0" VerticalAlignment="Top" Width="100" TabIndex="4" />
        <Button x:Name="btnRemoveBook" Content="Remove Book" HorizontalAlignment="Left" Height="26" Margin="656,67,0,0" VerticalAlignment="Top" Width="100" TabIndex="4"/>
        <Button x:Name="btnListBooks" Content="List Books" HorizontalAlignment="Left" Height="26" Margin="656,98,0,0" VerticalAlignment="Top" Width="100" TabIndex="4"/>

    </Grid>
</Window>
