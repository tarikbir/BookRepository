<Window x:Class="BookRepository.AdminPanel.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookRepository.AdminPanel"
        mc:Ignorable="d"
        Title="AdminPanel" Height="300" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF578BBF" Offset="0"/>
                <GradientStop Color="#FFB2D9FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnUserInfo" Content="Users" HorizontalAlignment="Center" Height="26" VerticalAlignment="Center" Width="100" TabIndex="1" Click="btnUserInfo_Click"/>
        <Button x:Name="btnBooks" Content="Books" HorizontalAlignment="Center" Height="26" Margin="0,-100,0,0" VerticalAlignment="Center" Width="100" TabIndex="2" Click="btnBooks_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Center" Height="26" Margin="0,100,0,0" VerticalAlignment="Center" Width="100" TabIndex="3" Click="btnExit_Click"/>
    </Grid>
</Window>
